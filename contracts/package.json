
{
  "name": "festies-nft-contracts",
  "version": "2.0.0",
  "description": "Professional NFT contracts for Festival Greetings with comprehensive features, royalty support, and advanced approval systems",
  "type": "module",
  "private": true,
  "keywords": ["nft", "blockchain", "stacks", "clarity", "festival", "greetings"],
  "author": "Festies Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/festies/festies-nft-contracts.git"
  },
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build": "clarinet build",
    "deploy:devnet": "clarinet deploy --network devnet",
    "deploy:testnet": "clarinet deploy --network testnet",
    "deploy:mainnet": "clarinet deploy --network mainnet",
    "check": "clarinet check",
    "console": "clarinet console",
    "generate": "clarinet generate",
    "requirements": "clarinet requirements check"
  },
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^2.3.2",
    "@stacks/transactions": "^6.12.0",
    "chokidar-cli": "^3.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1",
    "vitest-environment-clarinet": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
