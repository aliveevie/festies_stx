{
  "name": "festies-nft-frontend",
  "description": "Professional NFT frontend for Festival Greetings with modern UI/UX and blockchain integration",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "keywords": ["nft", "blockchain", "stacks", "react", "festival", "greetings", "frontend"],
  "author": "Festies Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/festies/festies-nft-frontend.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "analyze": "vite-bundle-analyzer",
    "clean": "rm -rf dist node_modules/.vite",
    "preinstall": "npx only-allow yarn"
  },
  "dependencies": {
    "@stacks/connect": "^8.1.9",
    "@stacks/transactions": "^6.12.0",
    "@stacks/wallet-sdk": "^7.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.1",
    "react-query": "^3.39.3",
    "framer-motion": "^11.0.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "lucide-react": "^0.400.0",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "3.4.1",
    "vite": "^6.3.5",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "vitest": "^2.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "jsdom": "^24.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.6.0",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
